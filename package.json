{
  "name": "@kernet/sabanks",
  "version": "0.1.1",
  "description": "The South African Bank Information Library focuses on providing essential details about banks in South Africa.",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "scripts": {
    "build": "tsup ./src/index.ts --format cjs,esm --dts",
    "release": "pnpm run build && changeset publish",
    "test": "vitest",
    "lint": "tsc",
    "example": "pnpm build && tsc ./example/test.ts && node ./example/test.js"
  },
  "author": "Sivuyile Magutywa",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/Kernet-Pty-Ltd/smsportal"
  },
  "maintainers": [
    {
      "name": "Sivuyile Magutywa",
      "email": "s.magutywa@kernet.co.za"
    }
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.6.0",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "tsup": {
    "outDir": "lib"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
